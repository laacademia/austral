{% extends 'base.html.twig' %}

{% block body %}
	
	{% for message in app.flashes('success') %}
	    <div class="alert alert-success">
	        {{ message }}
	    </div>
	{% endfor %}
	<div id="reset_container">    	
    	<h1 class="h3 mb-3 font-weight-normal">Restablecer Contraseña</h1>
    	<p>Se enviará un mail a su casilla con el link de reseteo.</p>
    	{{ form(form) }}
    	<a href="/login">Volver</a>
    </div>
{% endblock %}

{% block stylesheets %}

<style type="text/css">
    .btn-primary{
        margin: 10px 0 5px 0;
    }
    ul{
    	margin: 0;
    	padding: 0;
    }
    li{
    	list-style: none;
    	color: red;
    	font-size: 13px;
    }
    @media (min-width: 1281px) {
         #reset_container{
            text-align: center;
            margin: auto;
            width: 25%;
            background-color:aliceblue;
            padding: 2vw;
        }
    }


    @media (min-width: 1025px) and (max-width: 1280px) {
        #reset_container{
            text-align: center;
            margin: auto;
            width: 25%;
            background-color:
            aliceblue;
            padding: 1vw;
        }
    }
    @media only screen and (max-width: 600px) {

        #reset_container{
            text-align: center;
            margin: auto;
            background-color:
            aliceblue;
            padding: 1vw;
        }
    }

</style>
{% endblock %}
