    text-shadow: 1px 1px 1px rgba(0, 0, 0, 1);
    
}
.texto-contador{
    text-align: center;
    font-size: 40px;
    font-weight: bold;
    text-shadow: 1px 1px 1px rgba(0, 0, 0, 1);
    
    opacity: 1;
    color: #000;
}
</style>
{% endblock %}